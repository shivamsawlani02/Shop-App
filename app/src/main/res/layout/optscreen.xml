<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView"
                android:layout_width="258dp"
                android:layout_height="33dp"
                android:layout_marginStart="110dp"
                android:layout_marginEnd="86dp"
                android:fontFamily="@font/abril_fatface"
                android:text="@string/few_more_steps"
                android:textColor="#090101"
                android:textSize="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="149dp"
                android:layout_height="125dp"
                android:layout_marginStart="210dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="130dp"
                android:src="@drawable/fill_2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent">

            </ImageView>

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="210dp"
                android:layout_height="253dp"
                android:layout_marginEnd="48dp"
                android:layout_marginRight="48dp"
                android:layout_marginBottom="16dp"
                android:src="@drawable/humaaan_12"
                android:layout_marginTop="10sp"
                app:layout_constraintTop_toBottomOf="@id/textView"
                app:layout_constraintEnd_toStartOf="@+id/imageView5">

            </ImageView>

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="115dp"
                android:layout_height="131dp"
                android:layout_marginEnd="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="136dp"
                android:src="@drawable/leaf2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView"
                app:layout_constraintEnd_toStartOf="@+id/imageView">

            </ImageView>

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="90dp"
                android:layout_height="103dp"
                android:layout_marginStart="352dp"
                android:layout_marginLeft="352dp"
                android:layout_marginBottom="84dp"
                android:src="@drawable/leaf_bottom"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent">

            </ImageView>

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="94dp"
                android:layout_height="104dp"
                android:layout_marginStart="344dp"
                android:layout_marginLeft="344dp"
                android:src="@drawable/leaf_bottom_1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent">

            </ImageView>

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="62dp"
                android:layout_height="81dp"
                android:layout_marginEnd="280dp"
                android:layout_marginRight="364dp"
                android:layout_marginBottom="142dp"
                android:src="@drawable/leave_the_leaf_2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/imageView2"
                app:layout_constraintStart_toStartOf="parent">

            </ImageView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/your_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-black"
            android:text="@string/verification"
            android:textSize="15dp"
            android:transitionName="trans2">

        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:text="@string/entered_mobile_number"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/abril_fatface"
            android:textSize="15dp">

        </TextView>

        <TextView
            android:id="@+id/getting_number"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textColor="#15aae6"
            android:textSize="15dp">

        </TextView>

        <TextView
            android:id="@+id/text_opt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:text="@string/enter_otp"
            android:textColor="#090a0a">

        </TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:isScrollContainer="false"
        android:orientation="vertical"
       >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <in.aabhasjindal.otptextview.OtpTextView
                android:id="@+id/otp_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:bar_enabled="true"
                android:layout_gravity="center_horizontal"
                app:bar_height="2dp"
                android:transitionName="trans5"
                app:height="40dp"
                app:length="6"
                app:otp_text_size="24dp"
                app:width="40dp">

            </in.aabhasjindal.otptextview.OtpTextView>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="176dp"
                    android:layout_marginRight="176dp"
                    android:layout_marginBottom="12dp"
                    android:text="@string/resend_the_code_again_in"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/textView4"
                    android:layout_marginStart="10sp"
                    android:textSize="20sp"
                    android:textColor="@color/colorAccent"
                    android:text="20 seconds"
                    android:id="@+id/timer"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@+id/textView4"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_margin="15sp"
                    android:text="@string/resend"
                    android:visibility="gone"
                    android:id="@+id/resend"
                    />



<!--                <com.dhruv.timerbutton.TimerButton-->
<!--                    android:id="@+id/timer_button"-->
<!--                    android:layout_width="223dp"-->
<!--                    android:layout_height="44dp"-->
<!--                    android:layout_marginEnd="32dp"-->
<!--                    app:animationBackground="@android:color/transparent"-->
<!--                    app:animationCompleteText="RESEND"-->
<!--                    app:buttonBackground="@android:color/transparent"-->
<!--                    app:layout_constraintEnd_toEndOf="parent"-->
<!--                    app:layout_constraintTop_toTopOf="parent"-->
<!--                    app:textColor="#15aae6">-->

<!--                </com.dhruv.timerbutton.TimerButton>-->
            </androidx.constraintlayout.widget.ConstraintLayout>


        </LinearLayout>




    </LinearLayout>

    <ProgressBar
        android:id="@+id/btn_next"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="continue"
        android:transitionName="trans4">

    </ProgressBar>

    <TextView
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:textColor="#fc0303"
        android:text="@string/wrong_otp"
        android:layout_gravity="center"
        android:id="@+id/warning"
        >

    </TextView>


</LinearLayout>